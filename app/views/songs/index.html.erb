<h2>登録内容</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ファイル名</th>
      <th>曲名</th>
      <th>アーティスト</th>
      <th>アルバム</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.title %></td>
        <td><%= song.artist %></td>
        <td><%= song.album %></td>
        <td>
          <%= link_to '予約',
            reservations_path(song),
            method: :post,
            data: { confirm: '予約しますか？' },
            class: 'btn btn-success' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>